<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:fontFamily="@font/aladin"
        android:text="MY MOBILE DIETICIAN"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobil Diyetisyenime Hosgeldiniz..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.04000002" />

    <Button
        android:id="@+id/learnIdealWeightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vucut Kitle Indeksinizi,Ideal Kilonuzu, Gunluk Tuketmeniz Gereken Ortalama Kalori Miktarini Ogrenmek Icin Tiklayiniz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessage"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/informationsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lutfen Diyete Baslamadan Once Diyetisyenimizin Uyarilarini ve Onerilerini Dikkate Alalim.Uyari ve Oneriler Icin Tiklayiniz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learnIdealWeightBtn"
        app:layout_constraintVertical_bias="0.100000024" />

    <Button
        android:id="@+id/mealSuggestionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ogunluk Yemek Onerileriniz Icin Tiklayiniz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informationsBtn"
        app:layout_constraintVertical_bias="0.13999999" />


</androidx.constraintlayout.widget.ConstraintLayout>